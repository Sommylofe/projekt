    elif jmpl == "zagle":
        while 1:


            print('Witam w opcji pomagającej ustawić żagle.')
            statekl = input('Na początku podaj swój statek: Sloop, Bryg czy Galeon. ').lower()

            if statekl == 'sloop':
                wiatr = input('podaj kierunek wiatru (headwind, crosswind, tailwind, into crosswind) ').lower()

                if wiatr == 'headwind':
                    print('ustaw żagle tak żeby zderzały się z wiatrem, twoja szacowana prędkość to 1,05 m/s co jest najszybciej pod wiatr w całej grze')
                    print()
                    break
                elif wiatr == 'crosswind':
                    print('ustaw żagle z przeciwnej strony statku tak by łapały wiatr szacowana prędkość to 1,53 m/s')
                    print()
                    break
                elif wiatr == 'tailwind':
                    print('ustaw żagle na prosto tak by łapały pełen wiatr szacowana prędkość to 1,39 m/s ')
                    print()
                    break
                elif wiatr == 'into crosswind':
                    print ('ustaw żagle na prosto względem statku szacowana prędkość to 1,26 m/s ')
                    print()
                    break
                else:
                    print('nie rozumiem polecenia ')
            if statekl == 'bryg':
