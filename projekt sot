    elif jmpl == "outpost":
        
        while 1:
            
            alfabet = {'a': 1,  'b': 2, 'c': 3, 'd': 4, 'e': 5, 'f': 6, 'g': 7, 'h': 8, 'i': 9, 'j': 10, 'k': 11, 'l': 12, 'm': 13, 'n': 14, 'o': 15, 'p': 15, 'q': 16, 'r': 17, 's': 18, 't': 19, 'u': 20, 'v': 21, 'w': 22, 'x': 23, 'y': 24, 'z': 25}
            
            
            x = input('podaj wartość x ')
            y = (int(input('podaj wartość y ')))

            a = (alfabet.get(x, 0))
            
            sanctuary = [6 , 7]
            golden_sands = [4, 10]
            plunder = [10, 18]
            ancient = [16, 17]
            galleons = [17, 8]
            dagger = [13, 8]
            morrows = [21, 17]

            y1 = y
            x1 = a
             
            #sanctuary
        
            sx2 = sanctuary[0]
            sy2 = sanctuary[1]
            
            swynik = math.sqrt((sx2 - x1)**2 + (sy2 - y1)**2)

            #golden_sands

            gsx2 = golden_sands[0]
            gsy2 = golden_sands[1]
            gswynik = math.sqrt((gsx2 - x1)**2 + (gsy2 - y1)**2)

            #plunder

            px2 = plunder[0]
            py2 = plunder[1]
            pwynik = math.sqrt((px2 - x1)**2 + (py2 - y1)**2)
    
            #ancient


            ax2 = ancient[0]
            ay2 = ancient[1]
            awynik = math.sqrt((ax2 - x1)**2 + (ay2 - y1)**2)

            #galleons

            gx2 = galleons[0]
            gy2 = galleons[1]
            gwynik = math.sqrt((gx2 - x1)**2 + (gy2 - y1)**2)

            #dagger

            dx2 = dagger[0]
            dy2 = dagger[1]
            dwynik = math.sqrt((dx2 - x1)**2 + (dy2 - y1)**2)

            #morrows
 
            mx2 = morrows[0]
            my2 = morrows[1]
            mwynik = math.sqrt((mx2 - x1)**2 + (my2 - y1)**2)

            #najmniejsza wartość
            
            dziennik = {mwynik: "Morrow's Peak", dwynik: 'Dagger Tooth', gwynik: "Galleon's Grave", awynik: 'Ancient Spire', pwynik: 'Plunder', gswynik: 'New Golden Sands', swynik: 'Sanctuary' }
            
            lista = [mwynik, dwynik, gwynik, awynik, pwynik, gswynik, swynik]

            min_z_listy = (min(lista))
            
            nazwa_przystani = (dziennik.get(min_z_listy, 0))

            print(f'najbliższa przystań to {nazwa_przystani}')
            print()
            break
        

    koniec = input("aby wyszukac kolejną informacje wciśnij enter ")
    
    print()
    if koniec == (""):
        pass
    else:
        break

